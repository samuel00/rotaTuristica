	private String getMapsApiDirectionsUrl() {
		String waypoints = "waypoints=optimize:true|"
				+ MERCADOSAOBRAS.latitude + "," + MERCADOSAOBRAS.longitude
				+ "|" + "|" + BRAGANCA.latitude + ","
				+ BRAGANCA.longitude;

		String sensor = "sensor=false";
		String mode = "mode=driving";
		String params = waypoints + "&" + sensor + "&" + mode;
		String output = "json";
		String url = "https://maps.googleapis.com/maps/api/directions/"
				+ output + "?" + params;
		return url;
	}

	private void addMarkers() {
		if (map != null) {
			map.addMarker(new MarkerOptions().position(MERCADOSAOBRAS)
					.title("Mercado de São Brás"));
			map.addMarker(new MarkerOptions().position(BRAGANCA)
					.title("Bragança"));
		}
	}


	private void startCaptureLocation() {
		LocationManager locationManager = (LocationManager) getSystemService(LOCATION_SERVICE);
		locationManager.requestLocationUpdates(LocationManager.NETWORK_PROVIDER, INTERVAL_CAPTURE_IN_MILIS, INTERVAL_PHYSICAL_SPACE_IN_METERS, this);
		locationManager.requestLocationUpdates(LocationManager.GPS_PROVIDER, INTERVAL_CAPTURE_IN_MILIS, INTERVAL_PHYSICAL_SPACE_IN_METERS, this);

	}



