	<LinearLayout
        style="@style/LinearLayout_vertical"
        android:layout_weight="0.05" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/texto_slide" />

        <Gallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <View style="@style/View_paraEspacamento"/>
    
    <LinearLayout style="@style/LinearLayout_vertical" >
    
        <TextView
            android:id="@+id/descricao_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/descricao_titulo"
            android:textColor="@android:color/white"
            android:textSize="18sp" 
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="6dp"/>

	    <TextView
	        android:id="@+id/descricao"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp" />
	    
	    <TextView
            android:id="@+id/endereco_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/endereco_titulo"
            android:textColor="@android:color/white"
            android:textSize="18sp" 
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="6dp"/>
	    
	    <TextView
	        android:id="@+id/endereco"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp" />
    
    </LinearLayout>

    <View style="@style/View_paraEspacamento"/>
    
    <LinearLayout style="@style/LinearLayout_vertical" >

        <Button
            style="@style/ButtonRoxo"
            android:id="@+id/mapaButton"
            android:onClick="verNoMapa"
            android:text="@string/ver_no_mapa"/>

    </LinearLayout>
	

</LinearLayout>